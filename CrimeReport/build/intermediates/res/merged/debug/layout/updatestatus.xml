<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/crime_bg2" >

    <TextView
        android:id="@+id/tvupstat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="30dp"
        android:text="Update Status"
        android:textColor="#fff"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText_status"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvupstat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Enter status here:"
        android:padding="5dp"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1_upstat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editText_status"
        android:layout_below="@+id/editText_status"
        android:layout_marginTop="29dp"
         android:textColor="#ffffff"
        android:text="Update " />

    <TextView
        android:id="@+id/tsloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvdisp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Location"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/tvdisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Status"
        android:textColor="#fff" />

</RelativeLayout>
